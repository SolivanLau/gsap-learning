---
import type { IconProps } from "@icons/types";

type Props = IconProps;

const { size, width, height, class: className, ...rest } = Astro.props;
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    width={size || width}
    height={size || height}
    viewBox="0 0 24 24"
    class:list={[className]}
    {...rest}
>
    <g
        class="mouse"
        fill="none"
        stroke="#87E64B"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        color="#87E64B"
    >
        <path
            class="mouse__body"
            d="M12 22c6 0 7.5-4.51 7.5-10S18 2 12 2S4.5 6.51 4.5 12S6 22 12 22m-.012-15.161v4.92"
        ></path>
        <path
            class="mouse__wheel"
            d="M9.996 7.859c.984-1.02 1.584-1.92 2.04-1.856c.384-.003.744.596 1.968 1.856m0 3.281c-.984 1.02-1.584 1.92-2.04 1.856c-.384.003-.744-.595-1.968-1.855"
        ></path>
    </g>
</svg>
