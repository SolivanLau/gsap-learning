---
import "@styles/main.scss";

import Nav from "@components/Nav.astro";
interface Props {
    title?: string;
}

const { title = "GSAP Learning" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="overlay">
        <Nav />
        <slot />
    </body>
</html>
